@model AmazonClone.MVC.Models.Order

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Invoice</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
        }

        h2 {
            color: #4caf50;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        td, th {
            border: 1px solid #ccc;
            padding: 10px;
        }

        th {
            background: #f4f4f4;
        }
    </style>
</head>
<body>
    <h2>Order Invoice</h2>
    <p><strong>Order ID:</strong> @Model.Id</p>
    <p><strong>Product Name:</strong> @Model.ProductName</p>
    <p><strong>Quantity:</strong> @Model.Quantity</p>
    <p><strong>Price per Item:</strong> ₹@Model.Price</p>
    <p><strong>Total:</strong> ₹@Model.Total</p>
    <p><strong>Payment Mode:</strong> @Model.PaymentMode</p>
    <p><strong>Order Date:</strong> @DateTime.UtcNow.ToString("dd MMM yyyy")</p>
</body>
</html>
